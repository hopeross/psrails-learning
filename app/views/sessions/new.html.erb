<h1>Sign In</h1>
<p>No Account?  No problem!  Sign up <%= link_to "here", signup_path %>!</p>

<%= form_with(url: session_path, local: true) do |f| %>
  <%= f.label :email_or_username, "Enter email or password" %>
  <%= f.text_field :email_or_username, required: true %>

  <%= f.label :password %>
  <%= f.password_field :password, required: true   %>

  <%= f.submit %>
<% end %>
