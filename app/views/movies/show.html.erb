<section class="movie-details">
  <div class="details">
    <h1><%= @movie.title %></h1>
    <div class="image">
      <%= image_tag @movie.image_file_name %>
    </div>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>
    <div class="reviews">
      <%= link_to pluralize(@movie.reviews.size, "review"),
                  movie_reviews_path(@movie) %>
    </div>
    <h3>
      Director: <%= @movie.director %> &bull; Duration: <%= @movie.duration %>
    </h3>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Total Gross:</th>
        <td><%= hit_or_flop(@movie) %></td>
      </tr>
    </table>
  </div>
</section>

<section class="admin">
  <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
  <%= link_to "Delete", movie_path(@movie), class: "button", method: :delete, data: { confirm: 'really?'} %>
</section>