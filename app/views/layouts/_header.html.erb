<header>
  <nav>
    <ul class="left">
      <li><%= link_to(image_tag("logo.png"), root_path) %></li>
      <li><%= link_to("All Movies", movies_path) %></li>
      <li><%= link_to("Upcoming", filtered_movies_path(:upcoming)) %></li>
      <li><%= link_to("Recent", filtered_movies_path(:recent)) %></li>
      <li><%= link_to("Hits", filtered_movies_path(:hits)) %></li>
      <li><%= link_to("Flops", filtered_movies_path(:flops)) %></li>
    </ul>
    <ul class="right">
      <% if current_user %>
        <ul><%= link_to current_user.name, current_user %></ul>
        <ul><%= link_to "Sign Out", session_path, method: :delete, class: "button" %></ul>
      <% else %>
        <li><%= link_to("Sign In", signin_path, class: "button") %></li>
        <li><%= link_to("Sign Up", signup_path, class: "button") %></li>
      <% end %>
    </ul>
  </nav>
</header>